<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Asistente de Compras de Librería con IA' %></title>
    
    <!-- CSS personalizado -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">
                        <i class="fas fa-robot"></i>
                        Librería IA
                    </a>
                    
                    <div class="navbar-nav ms-auto">
                        <% if (typeof user !== 'undefined' && user) { %>
                            <span class="navbar-text me-3">
                                <i class="fas fa-user"></i> Hola, <%= user.username || user.email %>
                            </span>
                        <% } else { %>
                            <span class="navbar-text">
                                <i class="fas fa-user"></i> Usuario invitado
                            </span>
                        <% } %>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <!-- Contenido principal -->
    <main class="main-content">
        <div class="container">
            <!-- Mensajes de alerta -->
            <% if (typeof messages !== 'undefined' && messages.length > 0) { %>
                <div class="messages-container">
                    <% messages.forEach(function(message) { %>
                        <div class="alert alert-<%= message.type || 'info' %> alert-dismissible fade show" role="alert">
                            <%= message.text %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% }); %>
                </div>
            <% } %>

            <!-- Título de la página -->
            <% if (typeof showHeader !== 'undefined' && showHeader !== false) { %>
                <div class="page-header">
                    <h1 class="page-title">
                        <% if (typeof pageTitle !== 'undefined') { %>
                            <%= pageTitle %>
                        <% } else if (typeof title !== 'undefined') { %>
                            <%= title %>
                        <% } else { %>
                            Asistente de Compras de Librería con IA
                        <% } %>
                    </h1>
                </div>
            <% } %>

            <!-- Contenido específico de cada página -->
            <%- body %>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; 2025 Librería IA - Asistente de Compras Inteligente</p>
                </div>
                <div class="col-md-6 text-end">
                    <p>Desarrollado con <i class="fas fa-heart text-danger"></i> y Node.js</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- JavaScript personalizado -->
    <script src="/js/main.js"></script>
    
    <!-- Scripts específicos de cada página -->
    <% if (typeof scripts !== 'undefined') { %>
        <% scripts.forEach(function(script) { %>
            <script src="<%= script %>"></script>
        <% }); %>
    <% } %>
    
    <!-- Scripts inline específicos de cada página -->
    <% if (typeof inlineScripts !== 'undefined') { %>
        <script>
            <%- inlineScripts %>
        </script>
    <% } %>
</body>
</html> 